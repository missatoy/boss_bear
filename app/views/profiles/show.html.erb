<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-sm-12 col-lg-7 shadow-sm p-4 show-details-card">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link active" data-bs-toggle="tab" href="#msg">Bookings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-bs-toggle="tab" href="#pro">My bears</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-bs-toggle="tab" href="#set">Profile</a>
        </li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane container active" id="msg">
          <% @bookings.each do |booking| %>
            <div class="card-booking mt-4">
              <% if booking.bear.photo.attached? %>
                            <%= cl_image_tag booking.bear.photo.key,
                                  crop: :thumb, gravity: :face %>
                          <% end %>
              <div class="card-booking-infos">
                <div>
                  <h2><%= booking.bear.personality %> - <%= booking.date_start.day %>/<%= booking.date_start.month %> ~ <%= booking.date_finish.day %>/<%= booking.date_finish.month %></h2>
                </div>
                <h2 class="card-booking-pricing">â‚¬<%= booking.bear.price %></h2>
                <p class="card-booking-delete"><%= link_to "Delete", bear_booking_path(booking.bear, booking),
                                        data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to DELETE you booking?"} %></p>
              </div>
            </div>
          <% end %>
        </div>
        <div class="tab-pane container fade" id="pro">

        </div>
        <div class="tab-pane container fade" id="set">
          <h1>Hello <%= @profile.first_name %> </h1>

          <div>
            <% if @profile.photo.attached? %>
              <%= cl_image_tag @profile.photo.key,
                width: 150, height: 150, crop: :thumb, gravity: :face, class: 'avatar-profile' %>
            <% end %>
          </div>

          <div class="mt-4">
            <div>
              <%= render "form", profile: @profile %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
