<div class="container padding-top">
  <div class="d-flex align-items-center flex-column">
    <div class="card-lend-form col-sm-12 col-lg-6 mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(<%= asset_path 'bears.jpg' %>)">
      Lend a bear!
    </div>
    <div class="col-sm-12 col-lg-6">
      <h1 class="text-center">What do you need to update?</h1>
        <%= simple_form_for(@bear) do |f| %>
          <%= f.input :name, input_html: {class:"form-control-new"}%>
          <%= f.input :personality, input_html: {class:"form-control-new"} %>
          <%= f.input :description, input_html: {class:"form-control-new"} %>
          <%= f.input :price, input_html: {class:"form-control-new"} %>
          <%= f.input :photo, as: :file, input_html: {class:"form-control-new"} %>
          <%= f.submit class: 'button secondary-button'%>
        <% end %>
    </div>
  </div>
</div>
