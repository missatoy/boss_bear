<div class="container">
  <div class="d-flex align-items-start justify-content-between mt-4">
    <div class="col-7">
      <div>
        <% if @bear.photo.attached? %>
          <%= cl_image_tag @bear.photo.key, height: 400, width: 400, crop: :fill %>
        <% end %>
        <h1><%= @bear.name %></h1>
        <h2><%= @bear.personality %></h2>
      </div>

      <div>
        <p><%= @bear.description %></p>
        <p class="font-weight-bold"><%= @bear.price %></p>
      </div>
    </div>

  <div class="container">
    <div class="row">
      <div class="col-sm">
        <% if @bear.photo.attached? %>
          <%= cl_image_tag @bear.photo.key, height: 400, width: 400, crop: :fill %>
        <% end %>
        <p></p>
        <p><%= @bear.description %></p>
        <p><%= @bear.price %></p>
      </div>
      <div class="col-sm">

    <div class="col-4 p-4 bg-white rounded shadow p-3 mb-5 bg-white rounded">
      <div data-controller="flatpickr">
      <%= simple_form_for([@bear, @booking]) do |f| %>
        <%= f.input :date_start, as: :string, input_html: {class:"datepicker"} %>
        <%= f.input :date_finish, as: :string, input_html: {class:"datepicker"} %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
