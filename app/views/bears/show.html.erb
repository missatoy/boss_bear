<div class="container">
  <div class="d-flex align-items-start justify-content-between mt-4">
    <div class="col-7">
      <div>
        <% if @bear.photo.attached? %>
          <%= cl_image_tag @bear.photo.key, height: 400, width: 400, crop: :fill %>
        <% end %>
        <h1><%= @bear.name %></h1>
        <h2><%= @bear.personality %></h2>
      </div>

      <div>
        <p><%= @bear.description %></p>
        <p><%= @bear.price %></p>
        <% if @favourite.exists? %>
          <%= link_to bear_favourite_path(@bear, @favourite) ,data: { 'turbo-method': :delete } do %>
            <i class="fa-solid fa-heart"></i>
          <% end %>
        <% else %>
          <%= link_to bear_favourites_path(@bear) ,data: { 'turbo-method': :post } do %>
            <i class="fa-regular fa-heart"></i>
          <% end %>
        <% end %>
      </div>
    </div>

  <div class="container">
    <div class="row">
      <div class="col-sm">
        <% if @bear.photo.attached? %>
          <%= cl_image_tag @bear.photo.key, height: 400, width: 400, crop: :fill %>
        <% end %>
        <p></p>
        <p><%= @bear.description %></p>
        <p><%= @bear.price %></p>
      </div>
      <div class="col-sm">

      <div data-controller="flatpickr">
      <%= simple_form_for([@bear, @booking]) do |f| %>
      <%= f.input :date_start, as: :string, input_html: {class:"datepicker"} %>
      <%= f.input :date_finish, as: :string, input_html: {class:"datepicker"} %>
      <%= f.submit %>
    <% end %>
   </div>
  </div>
</div>
