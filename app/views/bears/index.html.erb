<%= render "layouts/banner" %>

  <div class="container">

  <div class="d-flex flex-wrap pt-4">
    <% @bears.each do |bear|%>
      <div class="card shadow-sm m-3" style="width: 18rem;">
          <% if bear.photo.attached? %>
            <%= cl_image_tag bear.photo.key, height: 400, width: 400, crop: :fill, class: "card-img-top" %>
          <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= bear.name %></h5>
          <h6 class="card-subtitle text-muted"><%= bear.personality %></h6>
          <div class="mt-4 mb-3">
            <a href="#" class="button card-button">Book now</a>
          </div>
        </div>
      </div>
    <% end %>

  </div>

</div>
